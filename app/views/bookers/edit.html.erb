<h1>Editing Book</h1>
<%= form_for(@booker, url:"/bookers/#{@booker.id}") do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Body</h4>
    <%= f.text_area :body %>
    
    <%= f.submit 'Update Book' %> <br>

    <%= link_to 'Edit', edit_booker_path(@booker.id) %> 
	<%= link_to 'Back', bookers_path %> 
<% end %>