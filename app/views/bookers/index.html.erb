<body>
	<h1>Books</h1>
	<table>
			<tr>
				<th>Title</th>
				<th>body</th>
				<th></th>
				<th></th>
				<th></th>
			</tr>
			<tr>
				<% @bookers.each do |booker| %>
					<th><%= booker.title %></th>
					<th><%= booker.body %></th>
					<th> <%= link_to 'Show',booker_path(booker.id) %></th>
					<th><%= link_to 'Edit', edit_booker_path(@bookers.ids) %></th>
					<th><%= link_to "Destroy", bookers_path(@bookers.ids), method: :delete, "data-confirm" => "Are you sure?" %></th>
			</tr>

			<% end %>
	</table>

	<%= form_for(@booker, url: '/bookers') do |f| %>
		<h1>New book</h1>
		<h4>Title</h4>
	    <%= f.text_field :title %>

		<h4>Body</h4>	
		<%= f.text_area :body %><br>
	
		<%= f.submit 'Crete Book' %>
	<% end %>

</body>
